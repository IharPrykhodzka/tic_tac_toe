<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pictures_1920x1200"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:shadowColor="@color/white"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/line_1_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_2_2"
        app:layout_constraintEnd_toStartOf="@+id/line_1_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_1_1"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintVertical_chainStyle="packed" />

    <android.widget.Button
        android:id="@+id/line_1_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_2_1"
        app:layout_constraintEnd_toStartOf="@+id/line_1_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintVertical_chainStyle="packed" />

    <android.widget.Button
        android:id="@+id/line_1_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_2_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_1_2"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintVertical_chainStyle="packed" />

    <android.widget.Button
        android:id="@+id/line_2_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_3_1"
        app:layout_constraintEnd_toStartOf="@+id/line_2_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_1_1" />

    <android.widget.Button
        android:id="@+id/line_2_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_3_2"
        app:layout_constraintEnd_toStartOf="@+id/line_2_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_2_1"
        app:layout_constraintTop_toBottomOf="@+id/line_1_2" />

    <android.widget.Button
        android:id="@+id/line_2_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toTopOf="@+id/line_3_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_2_2"
        app:layout_constraintTop_toBottomOf="@+id/line_1_3" />

    <android.widget.Button
        android:id="@+id/line_3_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_3_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_2_1" />

    <android.widget.Button
        android:id="@+id/line_3_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_3_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_3_1"
        app:layout_constraintTop_toBottomOf="@+id/line_2_2" />

    <android.widget.Button
        android:id="@+id/line_3_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/black_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/line_3_2"
        app:layout_constraintTop_toBottomOf="@+id/line_2_3" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_btn"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/line_3_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/giveTextResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:shadowColor="@color/purple_500"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        tools:text="You win!!!"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_1_2"/>

    <ImageView
        android:id="@+id/win_1_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_line_1_1_3_3"
        android:rotation="-10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/line_3_3"
        app:layout_constraintEnd_toEndOf="@id/line_3_3"
        app:layout_constraintStart_toStartOf="@id/line_1_1"
        app:layout_constraintTop_toTopOf="@id/line_1_1" />

    <ImageView
        android:id="@+id/win_3_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_line_1_3_3_1"
        android:rotation="10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/line_3_3"
        app:layout_constraintEnd_toEndOf="@id/line_3_3"
        app:layout_constraintStart_toStartOf="@id/line_1_1"
        app:layout_constraintTop_toTopOf="@id/line_1_1" />


    <ImageView
        android:id="@+id/win_1_7"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_vertical"
        app:layout_constraintBottom_toBottomOf="@id/line_3_1"
        app:layout_constraintEnd_toEndOf="@id/line_3_1"
        app:layout_constraintStart_toStartOf="@id/line_1_1"
        app:layout_constraintTop_toTopOf="@id/line_1_1" />

    <ImageView
        android:id="@+id/win_2_8"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_vertical"
        app:layout_constraintBottom_toBottomOf="@id/line_3_2"
        app:layout_constraintEnd_toEndOf="@id/line_3_2"
        app:layout_constraintStart_toStartOf="@id/line_1_2"
        app:layout_constraintTop_toTopOf="@id/line_1_2" />

    <ImageView
        android:id="@+id/win_3_9"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_vertical"
        app:layout_constraintBottom_toBottomOf="@id/line_3_3"
        app:layout_constraintEnd_toEndOf="@id/line_3_3"
        app:layout_constraintStart_toStartOf="@id/line_1_3"
        app:layout_constraintTop_toTopOf="@id/line_1_3" />

    <ImageView
        android:id="@+id/win_1_3"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/line_1_1"
        app:layout_constraintEnd_toEndOf="@id/line_1_3"
        app:layout_constraintStart_toStartOf="@id/line_1_1"
        app:layout_constraintTop_toTopOf="@id/line_1_1" />

    <ImageView
        android:id="@+id/win_4_6"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/line_2_1"
        app:layout_constraintEnd_toEndOf="@id/line_2_3"
        app:layout_constraintStart_toStartOf="@id/line_2_1"
        app:layout_constraintTop_toTopOf="@id/line_2_1" />

    <ImageView
        android:id="@+id/win_7_9"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/red_line_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/line_3_1"
        app:layout_constraintEnd_toEndOf="@id/line_3_3"
        app:layout_constraintStart_toStartOf="@id/line_3_1"
        app:layout_constraintTop_toTopOf="@id/line_3_1" />



</androidx.constraintlayout.widget.ConstraintLayout>